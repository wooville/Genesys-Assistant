        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textStyle="italic" android:textColor="@android:color/black" android:id="@+id/gearDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Gear Description" android:layout_below="@+id/gearTypeView"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
