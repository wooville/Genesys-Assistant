<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" app:cardBackgroundColor="@color/colorPrimaryDark" app:cardCornerRadius="10dp">
    <RelativeLayout android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="4dp">
        <Button android:id="@+id/delete_talent_btn" android:background="@android:drawable/ic_delete" android:layout_width="30dp" android:layout_height="30dp" android:layout_alignParentRight="true"/>
        <com.google.android.material.textfield.TextInputLayout android:textSize="20sp" android:textStyle="bold" android:textColorHint="@android:color/white" android:id="@+id/talentNameLayout" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Talent Name" android:layout_below="@+id/delete_talent_btn">
            <com.google.android.material.textfield.TextInputEditText android:textColor="@android:color/white" android:id="@+id/talentNameView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:inputType="text"/>
